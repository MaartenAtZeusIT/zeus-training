<odoo>
    <record id="estate_property_offers_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offers.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offers_form_view" model="ir.ui.view">
        <field name="name">estate.property.offers.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offers">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
